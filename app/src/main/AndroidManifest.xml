<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pasricha11rpl2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.pasricha11rpl2.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.pasricha11rpl2.splashscreen"></activity>
        <activity android:name="com.example.pasricha11rpl2.DetailFavourite" />
        <activity android:name="com.example.pasricha11rpl2.ListDataFavourite" />
        <activity android:name="com.example.pasricha11rpl2.DetailSoccer" />
        <activity android:name="com.example.pasricha11rpl2.ListData" />
        <activity android:name="com.example.pasricha11rpl2.Controlclass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pasricha11rpl2.MainMenu" />
        <activity android:name="com.example.pasricha11rpl2.MainActivity" />
    </application>

</manifest>